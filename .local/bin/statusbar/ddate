#!/bin/sh

# Outputs the date

dat=$(date '+%A, %d %b %Y')
# dat=$(date '+%d %b (%a) %Y')
# dat=$(date '+%d %b (%a)')
# echo " ï³ $dat "

datenum="$(date '+%d')"
firstdigit="$( echo "$datenum" | head -c 1 )"
lastdigit="$( echo "$datenum" | tail -c 2 )"
# lastdigit="${datenum:(-1)}"

if [ "$firstdigit" = 1 ]; then

    dat="$(date '+%A, %dth %b')"
    echo " $dat "

elif [ "$firstdigit" = 2 ] || [ "$firstdigit" = 3 ]; then
    if [ "$lastdigit" = 1 ]; then
        dat="$(date '+%A, %dst %b')"
    elif [ "$lastdigit" = 2 ]; then
        dat="$(date '+%A, %dnd %b')"
    elif [ "$lastdigit" = 3 ]; then
        dat="$(date '+%A, %drd %b')"
    else
        dat="$(date '+%A, %dth %b')"
    fi

    echo " $dat "
fi
