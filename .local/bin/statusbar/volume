#!/bin/sh

# Prints the current volume or ğŸ”‡ if muted. Uses PulseAudio by default,

volstat="$(pactl list sinks)"

# echo "$volstat" | grep -q "Mute: yes" && printf "ï¢ \\n" && exit
echo "$volstat" | grep -q "Mute: yes" && printf " ïŠ  mute \\n" && exit

vol="$(echo "$volstat" | grep '[0-9]\+%' | sed "s,.* \([0-9]\+\)%.*,\1,;1q")"

if [ "$vol" -gt "50" ]; then
	# icon="î"
	icon="ï€¨"
elif [ "$vol" -lt "30" ]; then
	# icon="î"
	icon="ï€§"
else
	# icon="î"
	icon="ï€§"
fi

printf "%s %s%% \\n" " $icon" "$vol"
