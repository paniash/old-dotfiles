#!/bin/sh
# Script to show torrent progress on the statusbar

transmission-remote -l | grep % |
	sed " # This first sed command is to ensure a desirable order with sort
	s/.*Stopped.*/A/g;
	s/.*Seeding.*/Z/g;
	s/.*100%.*/N/g;
	s/.*Idle.*/B/g;
	s/.*Uploading.*/L/g;
	s/.*%.*/M/g" |
		sort -h | uniq -c | sed " # Now we replace the standin letters with icons.
				s/A/ ï„‘ /g;
				s/B/ðŸ•°/g;
				s/L/ ï„¹ /g;
				s/M/ ï„º /g;
				s/N/ ï€Œ /g;
				s/Z/ ï€€ /g" | awk '{print $2 $1}' | paste -sd ' '
