#!/bin/sh

# Prints the current volume or ğŸ”‡ if muted. Uses PulseAudio by default,
# uncomment the ALSA lines if you remove PulseAudio.

volstat="$(pactl list sinks)"

echo "$volstat" | grep -q "Mute: yes" && printf "î\\n" && exit

vol="$(echo "$volstat" | grep '[0-9]\+%' | sed "s,.* \([0-9]\+\)%.*,\1,;1q")"

if [ "$vol" -gt "60" ]; then
	# icon="î"
	icon="ï€¨"
elif [ "$vol" -lt "30" ]; then
	# icon="î"
	icon="ï€§"
else
	# icon="î"
	icon="ï€§"
fi

printf "%s %s%%\\n" "$icon" "$vol"

